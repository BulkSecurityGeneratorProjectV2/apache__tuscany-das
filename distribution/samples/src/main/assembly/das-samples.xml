<assembly>
    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <!-- include legal and other files -->
        <fileSet>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>

	<!-- include companyweb source -->
        <!-- lresende - including companyweb using dependencySets
        <fileSet>
         <directory>../../samples/das/companyweb/src</directory>
         <lineEnding>keep</lineEnding>
         <includes>
            <include>**/*.java</include>
            <include>**/*.xml</include>
         </includes>
         <fileMode>644</fileMode>
        </fileSet>
        -->
	
    </fileSets>
    
    
    <dependencySets>
            <dependencySet>
                <outputDirectory>bin</outputDirectory>
                <includes>
                    <include>org.apache.tuscany.das.samples:sample-companyweb</include>
                </includes>
                <fileMode>644</fileMode>
            </dependencySet>
    </dependencySets>

</assembly>

